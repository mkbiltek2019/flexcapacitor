<s:HGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:mx="library://ns.adobe.com/flex/mx" 
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 
			 tabFocusEnabled="false" 
			 xmlns:controls="com.flexcapacitor.controls.*"
			 verticalAlign="baseline"
			 >
	
	<fx:Script>
		<![CDATA[
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
	</fx:Declarations>
	
	<s:Label text="Left tracking"/>
	
	<s:NumericStepper id="numericStepperLeft" 
					  minWidth="40"
					  width="80"
					  maxWidth="80"
					  maximum="1000"
					  minimum="-1000"
					  snapInterval="0"
					  stepSize=".1" 
					  mouseFocusEnabled="true"
					  tabFocusEnabled="false"
					  toolTip="Tracking right" />
	<s:Button id="clearLeftButton" 
			  skinClass="com.flexcapacitor.skins.ClearButtonSkin"
			  right="0" 
			  baseline="-12"
			  />
	
	<s:Label text="Right tracking"/>
	
	<s:NumericStepper id="numericStepperRight" 
					  minWidth="40"
					  maxWidth="80"
					  maximum="1000"
					  minimum="-1000"
					  snapInterval="0"
					  stepSize=".1" 
					  mouseFocusEnabled="true"
					  tabFocusEnabled="false"
					  toolTip="Tracking right" />
	<s:Button id="clearRightButton" 
			  skinClass="com.flexcapacitor.skins.ClearButtonSkin"
			  right="0" 
			  baseline="-12"
			  />
</s:HGroup>
